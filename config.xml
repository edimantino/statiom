    <! - Defina o ícone do aplicativo para cada plataforma. ->
    < ícone  src = " icon.png " />
    < ícone  src = " res / icon / android / icon-36-ldpi.png "    gap : platform = " android "     gap : qualifier = " ldpi " />
    < ícone  src = " res / icon / android / icon-48-mdpi.png "    gap : platform = " android "     gap : qualifier = " mdpi " />
    < ícone  src = " res / icon / android / icon-72-hdpi.png "    gap : platform = " android "     gap : qualifier = " hdpi " />
    < ícone  src = " res / icon / android / icon-96-xhdpi.png "   gap : platform = " android "     gap : qualifier = " xhdpi " />
    < ícone  src = " res / icon / blackberry / icon-80.png "      gap : platform = " blackberry " />
    < ícone  src = " res / icon / blackberry / icon-80.png "      gap : platform = " blackberry "  gap : state = " hover " />
    < ícone  src = " res / icon / ios / icon-57.png "             gap : platform = " ios "         width = " 57 "  height = " 57 " />
    < ícone  src = " res / icon / ios / icon-72.png "             gap : platform = " ios "         width = " 72 "  height = " 72 " />
